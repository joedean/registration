<p id="notice"><%= notice %></p>

<h1>Teachers</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Mobile phone</th>
      <th>Email</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Birth date</th>
      <th>Active</th>
      <th>Contractor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.company %></td>
        <td><%= teacher.first_name %></td>
        <td><%= teacher.last_name %></td>
        <td><%= teacher.mobile_phone %></td>
        <td><%= teacher.email %></td>
        <td><%= teacher.start_date %></td>
        <td><%= teacher.end_date %></td>
        <td><%= teacher.birth_date %></td>
        <td><%= teacher.active %></td>
        <td><%= teacher.contractor %></td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

