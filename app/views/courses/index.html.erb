<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Class room</th>
      <th>Category</th>
      <th>Name</th>
      <th>Level</th>
      <th>Start age</th>
      <th>End age</th>
      <th>Wday</th>
      <th>Start at</th>
      <th>End at</th>
      <th>Max size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.class_room %></td>
        <td><%= course.category %></td>
        <td><%= course.name %></td>
        <td><%= course.level %></td>
        <td><%= course.start_age %></td>
        <td><%= course.end_age %></td>
        <td><%= course.wday %></td>
        <td><%= course.start_at %></td>
        <td><%= course.end_at %></td>
        <td><%= course.max_size %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
